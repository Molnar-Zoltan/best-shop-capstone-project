{
  "name": "best-shop-capstone-project",
  "version": "1.0.0",
  "description": "Best Shop - built with vanilla JS and SASS",
  "repository": {
    "type": "git",
    "url": "https://github.com/Molnar-Zoltan/best-shop-capstone-project.git"
  },
  "license": "ISC",
  "author": "Zoltán Molnár",
  "type": "module",
  "scripts": {
    "dev": "npm-run-all --serial lint --parallel compile:watch serve",
    "compile": "sass ./src/scss/main.scss ./dist/style.css",
    "compile:watch": "sass --watch ./src/scss/main.scss ./dist/main.css",
    "serve": "live-server ./src --mount=/dist:./dist",
    "build": "echo \"Dummy build script required for Autocode Compile\"",
    "lint:js": "eslint \"**/*.js\"",
    "lint:js:fix": "eslint \"**/*.js\" --fix",
    "lint:scss": "stylelint \"src/scss/**/*.{scss,css}\"",
    "lint:scss:fix": "stylelint \"src/scss/**/*.{scss,css}\" --fix",
    "lint": "npm-run-all --parallel lint:js lint:scss",
    "lint:fix": "npm-run-all --parallel lint:js:fix lint:scss:fix"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-scss": "^4.0.9",
    "sass": "^1.93.3",
    "stylelint": "^16.25.0",
    "stylelint-config-standard-scss": "^16.0.0"
  }
}
